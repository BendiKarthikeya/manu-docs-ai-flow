# ==============================================
# PDF GENERATION CONFIGURATION
# ==============================================
# Choose PDF generation method:

# Option 1: Client-side (jsPDF) - Default, no config needed
VITE_PDF_PROVIDER=client

# Option 2: Server-side PDF service
# VITE_PDF_SERVICE_ENDPOINT=https://your-pdf-service.com/api
# VITE_PDF_SERVICE_API_KEY=your-pdf-service-key
# VITE_PDF_PROVIDER=service

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Environment (development, staging, production)
VITE_APP_ENV=production

# Feature flags
VITE_ENABLE_AI_PROCESSING=true
VITE_ENABLE_WHATSAPP_DELIVERY=true
VITE_ENABLE_PDF_GENERATION=true
VITE_ENABLE_FILE_CLEANUP=true

# Rate limiting     
VITE_MAX_UPLOADS_PER_HOUR=20
VITE_MAX_FILE_SIZE_MB=10
VITE_MAX_FILES_PER_SESSION=5

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Session timeout (in hours)
VITE_SESSION_TIMEOUT_HOURS=24

# File retention (in hours)
VITE_FILE_RETENTION_HOURS=24

# CORS origins (comma-separated)
VITE_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com